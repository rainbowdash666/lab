#include <iostream>

using namespace std;

int main()
{
    {
        setlocale(LC_ALL, "Rus");
        int a, b;
        cout << "Задание 1. Введите два целых числа:" << endl;
        cin >> a >> b;

        if ((a > 2) && (b <= 3)) {
            cout << "Высказывание 'Справедливы неравенства A > 2 и B <= 3' истинно\n" << endl;
        }
        else { cout << "Высказывание 'Справедливы неравенства A > 2 и B <= 3' ложно\n" << endl; }
    }
    {
        int a, b, c;
        cout << "Задание 2. Введите три целых числа:" << endl;
        cin >> a >> b >> c;

        if ((b > a) && (c > b)) {
            cout << "Высказывание 'Справедливо двойное неравенство A < B < C' истинно\n" << endl;
        }
        else { cout << "Высказывание 'Справедливо двойное неравенство A < B < C' ложно\n" << endl; }

    }
    {
        int a, b, c;
        cout << "Задание 3. Введите целое положительное число:" << endl;
        cin >> a;

        b = a / 100;
        c = a % 2;

        if ((b == 0) && (c == 0)) {
            cout << "Высказывание 'Данное число является четным двузначным' истинно\n" << endl;
        }
        else { cout << "Высказывание 'Данное число является четным двузначным' ложно\n" << endl; }

    }
    {
        int a, b, c, d;
        cout << "Задание 4. Введите трехзначное число:" << endl;
        cin >> a;

        b = a % 10;
        c = (a % 100 - b) / 10;
        d = a / 100;

        if (((c > b) && (d > c)) || ((d < c) && (c < b))) {
            cout << "Высказывание 'Цифры данного числа образуют возрастающую или убывающую последовательность' истинно\n" << endl;
        }
        else { cout << "Высказывание 'Цифры данного числа образуют возрастающую или убывающую последовательность' ложно\n" << endl; }

    }
    {
        int a, b, c, e, d;
        cout << "Задание 5. Введите четырехзначное число:" << endl;
        cin >> a;

        b = a / 100;
        c = a % 100;
        d = c % 10;
        e = c / 10;
        c = d * 10 + e;

        if (b == c) {
            cout << "Высказывание 'Данное число читается одинаково слева направо и справа налево' истинно\n" << endl;
        }
        else { cout << "Высказывание 'Данное число читается одинаково слева направо и справа налево' ложно\n" << endl; }

    }
    {
        int a, b, c;
        cout << "Задание 6. Введите три стороны треугольника (целые числа):" << endl;
        cin >> a >> b >> c;

        if ((a * a == b * b + c * c) || (b * b == a * a + c * c) || (c * c == a * a + b * b)) {
            cout << "Высказывание 'Треугольник со сторонами a, b, c является прямоугольным' истинно\n" << endl;
        }
        else { cout << "Высказывание 'Треугольник со сторонами a, b, c является прямоугольным' ложно\n" << endl; }
    }
    {
        int a, b, c;
        cout << "Задание 7. Введите три стороны треугольника (целые числа):" << endl;
        cin >> a >> b >> c;

        if ((a < b + c) && (b < a + c) && (c < a + b)) {
            cout << "Высказывание 'Существует треугольник со сторонами a, b, c' истинно\n" << endl;
        }
        else { cout << "Высказывание 'Существует треугольник со сторонами a, b, c' ложно\n" << endl; }

        return 0;
        }
}
