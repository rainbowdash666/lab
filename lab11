#include <iostream>

using namespace std;

int main()
{
    {
        setlocale(LC_ALL, "Rus");
        int a, b;
        cout << "Задание 1.\nВведите два целых числа:" << endl;
        cin >> a >> b;

        if (a == b) { a = 0; b = 0; }
        else {
            if (a > b) { b = a; }
            else { a = b; }
        }

        cout << "A = " << a << endl;
        cout << "B = " << b << endl;
    }
    {
        cout << "\nЗадание 2.\nВведите три числа:" << endl;
        float a, b, c, s;
        cin >> a >> b >> c;

        if ((a <= b) && (a <= c)) { s = b + c; }
        if ((b <= a) && (b <= c)) { s = a + c; }
        if ((c <= b) && (c <= a)) { s = a + b; }

        cout << "Сумма двух наибольших из них: " << s << endl;
    }
    {
        float x1, x2, x3, y1, y2, y3, d1, d2, s;
        cout << "\nЗадание 3.\nВведите две координаты точки A:" << endl;
        cin >> x1 >> y1;
        cout << "Введите две координаты точки B:" << endl;
        cin >> x2 >> y2;
        cout << "Введите две координаты точки C:" << endl;
        cin >> x3 >> y3;

        d1 = sqrt((x2 - x1) * (x2 - x1) + (y2 - y1) * (y2 - y1));
        d2 = sqrt((x3 - x1) * (x3 - x1) + (y3 - y1) * (y3 - y1));
        if (d1 = d2) { cout << "Расстояние между точками A и B, A и C равно между собой. Оно равняется " << d1 << endl; }
        if (d1 < d2) { cout << "Точка B расположена ближе к точке A, ее расстояние от точки A равно " << d1 << endl; }
        else {
            if (d1 != d2) cout << "Точка C расположена ближе к точке A, ее расстояние от точки A равно " << d2 << endl;
        }
    }
    {
        float x, y;
        cout << "\nЗадание 4.\nВведите две координаты точки, не лежащей на координатных осях OX и OY:" << endl;
        cin >> x >> y;

        if ((x > 0) && (y > 0)) { cout << "Точка расположена в 1-й четверти" << endl; }
        if ((x < 0) && (y > 0)) { cout << "Точка расположена во 2-й четверти" << endl; }
        if ((x < 0) && (y < 0)) { cout << "Точка расположена в 3-й четверти" << endl; }
        if ((x > 0) && (y < 0)) { cout << "Точка расположена в 4-й четверти" << endl; }
    }
    {
        int a;
        cout << "\nЗадание 5.\nВведите целое число:" << endl;
        cin >> a;

        if (a == 0) { cout << "Это нулевое число" << endl; }
        if ((a > 0) && (a % 2 == 0)) { cout << "Это положительное четное число" << endl; }
        if ((a > 0) && (a % 2 != 0)) { cout << "Это положительное нечетное число" << endl; }
        if ((a < 0) && (a % 2 == 0)) { cout << "Это отрицательное четное число" << endl; }
        if ((a < 0) && (a % 2 != 0)) { cout << "Это отрицательное нечетное число" << endl; }

    }
    {
        int a;
        cout << "\nЗадание 6.\nВведите целое число, лежащее в диапазоне 1-999:" << endl;
        cin >> a;

        if ((a < 10) && (a % 2 == 0)) { cout << "Это четное однозначное число" << endl; }
        if ((a < 10) && (a % 2 != 0)) { cout << "Это нечетное однозначное число" << endl; }
        if ((a > 9) && (a < 100) && (a % 2 == 0)) { cout << "Это четное двузначное число" << endl; }
        if ((a > 9) && (a < 100) && (a % 2 != 0)) { cout << "Это нечетное двузначное число" << endl; }
        if ((a > 99) && (a % 2 == 0)) { cout << "Это четное трехзначное число" << endl; }
        if ((a > 99) && (a % 2 != 0)) { cout << "Это нечетное трехзначное число" << endl; }
        return 0;
    }
}
