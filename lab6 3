#include <iostream>
#include <cmath>
	using namespace std;
	int main()
	{
		setlocale(LC_ALL, "RUS");
		cout << "Задание 3\nВведите значение A,B,C\n";
		int a, b, c;
		cout << "A= "; cin >> a;
		cout << "B= "; cin >> b;
		cout << "C= "; cin >> c;
		cout << "<Было A, B, C: " << a << " " << b << " " << c << endl;
		swap(a, c);
		swap(a, b);
		cout << "Стало A, B, C: " << a << " " << b << " " << c << endl;
	}
